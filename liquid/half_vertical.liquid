<!-- Main content area -->
<div class="layout layout--col">
        <!-- Usage metrics with progress bars -->
        <div class="item w--full flex-1">
            <div class="layout layout--col gap--medium w--full h--full justify--center">
                <div class="item">
                  <div class="meta"></div>
                  <div class="content text--center">
                    <span class="value value--small value--tnums">{{ metrics.system_name }}</span>
                    <div class="metric-label-with-icon">
                      <span class="label">{{ metrics.host_info.hostname }}</span>
                    </div>
                  </div>
                </div>
                <!-- CPU Progress Bar -->
                <div class="item w--full">
                <div class="progress-bar progress-bar--emphasis-2 w--full">
                    <div class="content w--full">
                    <span class="label">
                        {{ cpu_icon }}
                        CPU: {{ metrics.cpu.usage_percent | round }}%
                    </span>
                    </div>
                    <div class="track w--full">
                    <div class="fill cpu-fill"></div>
                    </div>
                </div>
                </div>
                
                <!-- Memory Progress Bar -->
                <div class="item w--full">
                <div class="progress-bar progress-bar--emphasis-2 w--full">
                    <div class="content w--full">
                    <span class="label">
                        {{ memory_icon }}
                        Memory: {{ metrics.memory.usage_percent | round }}%
                    </span>
                    </div>
                    <div class="track w--full">
                    <div class="fill memory-fill"></div>
                    </div>
                </div>
                </div>
                
                <!-- Disk Progress Bar -->
                <div class="item w--full">
                <div class="progress-bar w--full">
                    <div class="content w--full">
                    <span class="label">
                        {{ disk_icon }}
                        Disk: {{ metrics.disk.usage_percent | round }}%
                    </span>
                    </div>
                    <div class="track w--full">
                    <div class="fill disk-fill"></div>
                    </div>
                </div>
                </div>
            </div>
        </div>

        <div class="divider"></div>

        <!-- Additional metrics in equal grid -->
        <div class="item flex-1">
            <div class="grid grid--cols-2 gap--medium h--full">
                <div class="col">
                <div class="item metric-item h--full">
                    <div class="content">
                    <span class="value value--small value--tnums">{{ metrics.uptime.formatted | split: ' ' | slice: 0, 3 | join: ' ' }}</span>
                    <div class="metric-label-with-icon">
                        {{ uptime_icon }}
                        <span class="label">Uptime</span>
                    </div>
                    </div>
                </div>
                </div>
                <div class="col">
                <div class="item metric-item h--full">
                    <div class="content">
                    <span class="value value--small value--tnums">{{ metrics.cpu.load_avg.load_1m }}</span>
                    <div class="metric-label-with-icon">
                        {{ load_icon }}
                        <span class="label">Load</span>
                    </div>
                    </div>
                </div>
                </div>
            </div>
        </div>

        <!-- Bottom row metrics in equal grid -->
        <div class="item flex-1">
            <div class="grid grid--cols-2 gap--medium h--full">
                <div class="col">
                <div class="item metric-item h--full">
                    <div class="content">
                    <span class="value value--small value--tnums">{{ metrics.disk.temperature }}Â°C</span>
                    <div class="metric-label-with-icon">
                        {{ temperature_icon }}
                        <span class="label">Temp</span>
                    </div>
                    </div>
                </div>
                </div>
                <div class="col">
                <div class="item metric-item h--full">
                    <div class="content">
                    <span class="value value--small value--tnums">{{ metrics.cpu.cores }}c/{{ metrics.cpu.threads }}t</span>
                    <div class="metric-label-with-icon">
                        {{ cpu_icon }}
                        <span class="label">Cores</span>
                    </div>
                    </div>
                </div>
                </div>
            </div>
        </div>
</div>
    
<!-- Title Bar -->
<div class="title_bar">
    {{ server_icon }}
    <span class="title">{{ metrics.system_name }} {{ lastUpdate }}</span>
</div>